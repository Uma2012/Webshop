@model CreditCardModel
@{
    Layout = "";

    var months = new List<string>()
    {
        "Månad",
        "Januari",
        "Februari",
        "Mars",
        "April",
        "Maj",
        "Juni",
        "Juli",
        "Augusti",
        "September",
        "Oktober",
        "November",
        "December"
    };
}

<form asp-action="Index" method="post" asp-controller="Order">
    <div class="form-group">
        <input asp-for="CardNumber" class="form-control" placeholder="Kortnummer" />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="form-group d-flex justify-content-between">

        <select class="form-control">
            <option>Välj månad</option>
            @foreach (var month in months)
            {
                <option>@month</option>
            }
        </select>

        <select class="form-control ml-2">
            <option>År</option>
            @for (var year = DateTime.Now.Year; year < DateTime.Now.AddYears(10).Year; year++)
            {
                <option>@year</option>
            }
        </select>

    </div>

    <div class="form-group">
        <input asp-for="CVC" class="form-control" maxlength="3" placeholder="CVC" id="creditCardnumber" />
        <span asp-validation-for="CVC" class="text-danger"></span>
    </div>

    <div class="form-group" style="text-align: center;">
        <input type="submit" value="Betala" class="btn btn-success" asp-action="Index" />
    </div>

</form>


<script>
    document.getElementById("creditCardnumber").addEventListener("keyup", function () {
        this.value = this.value.replace(/[^\d]/, '');
    });
</script>