@model OrderAndPaymentMethods

@{
    ViewData["Title"] = "Index";
}

@if (TempData["Address Null"] != null)

{
    <div class="alert alert-warning" role="alert">
        @TempData["Address Null"] Klicka <a asp-action="EditUser" asp-controller="User">här</a> för uppdatera
    </div>
}


@if (TempData["QuantityOverload"] != null)
{<div class="alert alert-warning" role="alert">
        <i class="fas fa-info-circle"></i> @TempData["QuantityOverload"]
    </div>
}


@if (TempData["OrderError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["OrderError"]
    </div>
}


@if (TempData["PaymentMethodError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["PaymentMethodError"]
    </div>
}

<h3>Kassan</h3>
<hr />

<table class="table table-responsive-sm table-borderless text-white" style="border-collapse: separate; border-spacing: 0px 1px; min-width: 100%">
    <thead>
        <tr>
            <th scope="col">Produkt</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">Pris</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.OrderViewModel.Products)
        {
            <tr style="background-color: rgba(255, 255, 255, 0.08)">
                <td style="width: 80px"><img src="@Url.Content("~/Image/" + @product.Photo)" style="object-fit: contain; height: 60px; width: 80px; background-color: #fff" class="rounded" /></td>
                <td style="vertical-align: middle"><a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@product.ProductId">@product.ProductName</a></td>
                <td style="vertical-align: middle">
                    @product.Amount x @product.Price.ToString("C0")
                    @if (product.Discount > 0)
                    {
                        <span style="font-size: small; color: green">-@((int)(product.Discount * 100))% Rabatt!</span>
                    }
                </td>
                <td style="vertical-align: middle">
                    @if (product.Discount == 0)
                    {
                        <span style="font-weight: bold; color: #7fe095">@product.TotalProductCost.ToString("C0")</span>
                    }
                    else
                    {
                        <span style="font-weight: bold; color: #7fe095">@product.TotalProductCostDiscount.ToString("C0")</span>
                    }
                </td>
                <td style="vertical-align: middle">
                    @if (product.QuantityInStock - product.Amount < 0)
                    {
                        <span><i class="fas fa-exclamation-triangle" style="color: orange"></i></span>
                        <span style="font-size: small">I lager: @product.QuantityInStock</span>
                    }
                    else
                    {
                        <span><i class="fas fa-check" style="color: #7fe095"></i></span>
                    }
                </td>
            </tr>
        }
</table>

<div class="mt-3 mb-3">
    <a class="btn btn-dark" asp-action="Index" asp-controller="ShoppingCart">&laquo; Tillbaka till kundkorgen</a>
</div>

<div class="row" style="display: inline">
    <div class="col ">
        <div class="float-right" style="margin: 4px, 20px, 4px, 20px; font-size: 1.5em; color: #7fe095">@Model.OrderViewModel.OrderTotal.ToString("C0")</div>
    </div>
</div>


<h3 class="mt-3 mb-3">Adress och Betalning &raquo;</h3>
<hr />

@if (Model.OrderViewModel.AddressComplete)
{
    <div class="row text-dark">

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-body" style="color:black">
                    <h5 class="card-title">Din Fraktadress</h5>
                    <p>@Model.User.FirstName @Model.User.LastName</p>
                    <p>@Model.User.StreetAddress</p>
                    <p>@Model.User.ZipCode, @Model.User.City</p>
                    Stämmer inte adressen? <a asp-action="EditUser" asp-controller="User">ändra här</a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4 mt-2 mt-md-0 mt-lg-0 mt-xl-0 pt-0">
            <form asp-action="Index" method="post" asp-controller="Order" id="PayUsNow" style="margin: 0px; padding: 0px">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="OrderViewModel.PaymentMethodId" class="control-label text-white">Betalsätt</label>

                    <select asp-for="OrderViewModel.PaymentMethodId" class="form-control" id="paymentMethodDropdown">

                        <option>Välj</option>
                        @foreach (var item in Model.OrderViewModel.paymentMethodlist)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="OrderViewModel.PaymentMethodId" class="text-danger"></span>
                </div>


                <div id="paymentForms">
                    <div data-id="1" style="display:none;"><partial name="_KortPaymentPartial" model="@Model.CreditCardModel" /></div>
                    <div data-id="2" style="display:none;"><partial name="_SwishPaymentPartial" /></div>
                </div>
            </form>

        </div>
    </div>
}


